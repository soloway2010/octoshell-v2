<table style="table-layout: auto; width: auto;">
   <caption>Журнал</caption>
   <tr>
    <th>ID</th>
    <th>Тип события</th>
    <th>Название события</th>
    <th>Кто сделал?</th>
    <th>Изменение</th>
    <th>Время</th>
   </tr>
   <% PaperTrail::Version.select() do |record| %>
        <tr style="height: 100%">
            <td><%= record.id %></td>
            <td><%= record.item_type %></td>
            <td><%= record.event %></td>
            <td><%= record.whodunnit ? User.find(record.whodunnit).email : "Неизвестно" %></td>
            <td><%= record.object_changes %></td>
            <td><%= record.created_at %></td>
        </tr>
    <% end %>
</table>